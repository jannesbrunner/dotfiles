{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_style:":"template",
  "console_title_template": "{{.Shell}} in {{.Path}}",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#12a5a5",
          "foreground": "#202020",
          "leading_diamond": "\uE0B6",
          "trailing_diamond": "\uE0B4 ",
          "properties": {
            "postfix": "",
            "prefix": "",
            "wsl": "",
            "wsl_separator": ""
          },
          "style": "diamond",
          "type": "os"
        },
        {
          "background": "#bdbdbd",
          "foreground": "#202020",
          "leading_diamond": "\uE0B6",
          "trailing_diamond": "\uE0B4",
          "properties": {
            "prefix": "",
            "postfix": "",
            "style": "mixed",
            "mixed_threshold": 4,
            "home_icon": "\uFB9F",
            "enable_hyperlink": "true"
          },  
          "style": "diamond",
          "type": "path"
        },
        {
          "foreground": "lightYellow",
          "properties": {
            "postfix": "<lightBlue>)</>",
            "prefix": " :: <lightBlue>git(</>"
          },
          "style": "plain",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#68a063",
          "properties": {
            "display_mode": "files",
            "display_package_manager": true,
            "display_version": true,
            "npm_icon": "/npm",
            "postfix": "",
            "prefix": " ",
            "yarn_icon": "/yarn"
          },
          "style": "plain",
          "type": "node"
        },
        {
          "foreground": "#4063D8",
          "properties": {
            "display_mode": "files",
            "display_version": true,
            "postfix": "",
            "prefix": " "
          },
          "style": "plain",
          "type": "crystal"
        },
        {
          "foreground": "#DE3F24",
          "properties": {
            "display_mode": "files",
            "display_version": true,
            "postfix": "",
            "prefix": " "
          },
          "style": "plain",
          "type": "ruby"
        },
        {
          "foreground": "#FED142",
          "properties": {
            "display_mode": "context",
            "display_version": true,
            "display_virtual_env": false,
            "postfix": "",
            "prefix": " "
          },
          "style": "plain",
          "type": "python"
        },
        {
          "foreground": "lightGreen",
          "style": "plain",
          "type": "time"
        },
        {
          "type": "battery",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#193549",
          "background": "#ffeb3b",
          "properties": {
            "battery_icon": "",
            "discharging_icon": "\uE231 ",
            "charging_icon": "\uE234 ",
            "charged_icon": "\uE22F ",
            "color_background": true,
            "charged_color": "#4caf50",
            "charging_color": "#40c4ff",
            "discharging_color": "#ff5722",
            "postfix": "\uF295 ",
            "display_charging": true
          }
        }
    
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "lightGreen",
          "properties": {
            "always_enabled": true,
            "display_exit_code": true,
            "error_color": "red",
            "error_icon" : "",
            "prefix": "",
            "postfix": "➜ "
          },
          "style": "powerline",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "tooltips": [
    {
      "type": "git",
      "tips": ["git", "g"],
      "style": "diamond",
      "foreground": "#193549",
      "background": "#fffb38",
      "leading_diamond": "",
      "trailing_diamond": "",
      "properties": {
        "display_status": true,
        "display_upstream_icon": true,
        "status_colors_enabled": true,
        "local_changes_color": "#ff9248",
        "ahead_and_behind_color": "#f26d50",
        "behind_color": "#f17c37",
        "ahead_color": "#89d1dc"
      }
    }
  ]
}
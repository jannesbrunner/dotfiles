[user]
	email = jannes.brunner@student.htw-berlin.de
	name = jannesbrunner
[push]
	default = matching
[core]
	whitespace = cr-at-eol
[alias]
	lo = log --oneline --graph
	ss = status --short
	dt = difftool
	mt = mergetool
	syncr = remote update --prune
	fetcha = fetch --all --prune
	branchvv = branch -vv
	sut = --set-upstream-to	
[credential]
	helper = cache
[merge]
	tool = meld

[mergetool "meld"]
	cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
	keepBackup = false
	
[difftool]
	prompt = false

[difftool "meld"]
	cmd = meld "$LOCAL" "$REMOTE"
	
[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
  	frag = magenta bold
	old = red bold
	new = green bold
	
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
